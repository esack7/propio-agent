{
  "name": "ollama-agent",
  "version": "1.0.0",
  "description": "AI agent that interacts with local Ollama model",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:openrouter": "NODE_OPTIONS=--experimental-vm-modules jest openrouter",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "3.987.0",
    "chalk": "5.6.2",
    "fast-glob": "3.3.3",
    "ollama": "0.6.3",
    "ora": "9.3.0"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "25.2.3",
    "jest": "30.2.0",
    "prettier": "3.8.1",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}
